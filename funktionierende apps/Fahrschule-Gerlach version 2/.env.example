# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://fahrschule-gerlach.de
NEXT_PUBLIC_SITE_NAME="Fahrschule Gerlach"

# Google Maps API Key (required for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Contact Form Configuration
NEXT_PUBLIC_CONTACT_EMAIL=info@fahrschule-gerlach.de
NEXT_PUBLIC_PHONE_NUMBER=+49123456789

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Email Service (for contact form)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# Database (if using CMS)
DATABASE_URL=your_database_connection_string

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://fahrschule-gerlach.de
